<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="HardCodedText"
    android:orientation="vertical"

    android:layout_marginVertical="4dp"

    android:gravity="start">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="5dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/dark_gray"
        android:layout_marginBottom="5dp"
        android:id="@+id/date_wrapper"
        android:visibility="gone"
        android:paddingVertical="1dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22/03/2023"
            tools:ignore="HardcodedText"
            android:paddingVertical="6dp"
            android:paddingHorizontal="8dp"
            style="@style/whiteText.small"
            android:textSize="13sp"


            android:id="@+id/date"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        android:paddingVertical="15dp"
        android:background="@drawable/incoming_bg_1"
        android:layout_marginEnd="80dp"

        >
        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/extra_extra_light_gray"
            android:textSize="15sp"

            android:id="@+id/title"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:fontFamily="monospace"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sent"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_baseline_check_24" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/read"
            android:visibility="gone"
            app:drawableStartCompat="@drawable/ic_baseline_done_all_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=""
            style="@style/greyText.small"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:layout_gravity="bottom"
            android:id="@+id/time"

            android:lineSpacingExtra="0dp"/>
    </LinearLayout>



</LinearLayout>